<h1>List of all Tasks</h1>
<ul>
<% @tasks.each do |task| %>
  <li>
    <h2><%= task.title %></h2>
    <p><%= link_to 'Details', task_path(task) %></p>
    <p><%= link_to 'Edit', edit_task_path(task) %></p>
    <p><%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
  </li>
<% end %>
</ul>
<p><%= link_to 'Add a new task', tasks_new_path %></p>
